extends layout

block content
  h1= title
  p 欢迎来到 #{title}
  form.col-sm-4(id='set_name',method='',role='form')
    div.form-group
      label(for='name') 昵称
      input.form-control(type='text',id='name')
    button(type='submit',class='btn btn-info') 确认
  section#names
    ul
  .panel.panel-primary
    .panel-heading
      h6 聊天信息
    .panel-body#messages


  .row.sendM
    .col-md-10
      form#send_mes
        .input-group
          input#message.form-control
          span.input-group-btn
            button.btn.btn-info(type='submit') 发送


